<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_start"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_stop"/>
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/view_flip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgv01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bts1"/>

        <ImageView
            android:id="@+id/imgv02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bts2"/>

        <ImageView
            android:id="@+id/imgv03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/jin"/>

        <ImageView
            android:id="@+id/imgv04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/suga"/>

        <ImageView
            android:id="@+id/imgv05"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/jh"/>
        <ImageView
            android:id="@+id/imgv06"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rm"/>

        <ImageView
            android:id="@+id/imgv07"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/jm"/>

        <ImageView
            android:id="@+id/imgv08"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/jk"/>

        <ImageView
            android:id="@+id/imgv09"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bts1"/>
    </ViewFlipper>
</LinearLayout>